<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zjx.mapper.MindNodeMapper" >
  <resultMap id="BaseResultMap" type="com.zjx.model.MindNode" >
    <id column="node_id" property="nodeId" jdbcType="INTEGER" />
    <result column="node_name" property="nodeName" jdbcType="VARCHAR" />
    <result column="parent_id" property="parentId" jdbcType="VARCHAR" />
    <result column="user_id" property="userId" jdbcType="INTEGER" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
    <result column="is_del" property="isDel" jdbcType="INTEGER" />
    <result column="color" property="color" jdbcType="INTEGER" />
    <result column="zsd_ms" property="zsdms" jdbcType="LONGTEXT" />

  </resultMap>
  <sql id="Base_Column_List" >
    node_id  , node_name ,  parent_id , user_id , create_time , update_time , is_del  color , zsd_ms
  </sql>

  <update id="deleteNode">
    update
    mindnode
    set
    id_del = 1,
    update_time = NOW()
    where node_id = #{nodeId}
  </update>

  <delete id="deleteNodeFile">
    DELETE
    FROM
    node_file
    WHERE
    node_id = #{nodeId}
  </delete>

  <update id="saveMapZsd" parameterType="com.zjx.model.MindNode">
    update
    mindnode
    set
    zsdms = #{zsdms},
    update_time = NOW()
    where node_id = #{nodeId}
    and is_del = 0
  </update>

  <select id="getNodems" resultType="com.zjx.model.MindNode">
    SELECT
    m.zsd_ms as zsdms,
    m.node_name as nodeName,
    m.node_id as nodeId
    FROM
    mindnode m
    where
    m.node_id = #{nodeId}
    AND
    m.is_del = 0
  </select>
</mapper>
